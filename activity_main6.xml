<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_surface"
    android:backgroundTint="@android:color/system_on_tertiary_fixed_variant"
    tools:context=".MainActivity6">

    <EditText
        android:id="@+id/HungerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="Hunger"
        android:textColor="#4CAF50"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.74" />

    <EditText
        android:id="@+id/HealthText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="248dp"
        android:ems="10"
        android:inputType="text"
        android:text="Health"
        android:textColor="#4CAF50"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/CleanBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#9C27B0"
        android:text="Clean"
        app:layout_constraintBottom_toTopOf="@+id/HungerText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.572" />

    <Button
        android:id="@+id/PlayBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#C11E1E"
        android:text="Play"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.21"
        app:layout_constraintStart_toEndOf="@+id/CleanBtn"
        tools:layout_editor_absoluteY="259dp" />

    <Button
        android:id="@+id/FeedBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#2196F3"
        android:text="Feed"
        tools:layout_editor_absoluteX="294dp"
        tools:layout_editor_absoluteY="259dp" />

    <EditText
        android:id="@+id/CleanlinessText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="Cleanliness"
        android:textColor="#4CAF50"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HungerText"
        app:layout_constraintVertical_bias="0.259"
        tools:layout_editor_absoluteX="16dp" />

    <ImageView
        android:id="@+id/Playimage"
        android:layout_width="128dp"
        android:layout_height="118dp"
        app:srcCompat="@drawable/dog"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="128dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/clean" />

    <ImageView
        android:id="@+id/Hungryimage"
        android:layout_width="130dp"
        android:layout_height="106dp"
        app:srcCompat="@drawable/hungry"
        tools:layout_editor_absoluteX="279dp"
        tools:layout_editor_absoluteY="128dp" />

    <ImageView
        android:id="@+id/Cleanlinessimage"
        android:layout_width="147dp"
        android:layout_height="122dp"
        app:srcCompat="@drawable/pet"
        tools:layout_editor_absoluteX="-10dp"
        tools:layout_editor_absoluteY="124dp" />

</androidx.constraintlayout.widget.ConstraintLayout>